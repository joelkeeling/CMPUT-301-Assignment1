<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.cs.jkeeling.a1todolist.SummaryActivity" >

    <Button
        android:id="@+id/OptionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/options"
        android:onClick="optionsMenu" />
    
     <TextView
        android:id="@+id/active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"   
        android:layout_below="@+id/OptionsButton"
        android:layout_marginTop="15dp"
        android:text=""/>
         
    <TextView
        android:id="@+id/activeUnchecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"   
        android:layout_below="@+id/active"                 
        android:layout_marginTop="15dp"
        android:text=""/>
    
    <TextView
        android:id="@+id/activeChecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"              
        android:layout_below="@+id/activeUnchecked" 
        android:layout_marginTop="15dp"
        android:text=""/>    
    
    <TextView
        android:id="@+id/archived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:layout_below="@+id/activeChecked"        
        android:layout_marginTop="15dp"
        android:text=""/>

    <TextView
        android:id="@+id/archivedChecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/archived"
        android:layout_marginTop="15dp"
        android:text=""/>

    <TextView
        android:id="@+id/archivedUnchecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/archivedChecked"        
        android:layout_marginTop="15dp"
        android:text=""/>

</RelativeLayout>